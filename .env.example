# Variables de entorno para WebSAP Backend - EXAMPLE FILE

# Entorno (development o production)
NODE_ENV=development

# Puerto del servidor
PORT=3000

# JWT
JWT_SECRET=your_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h

# Configuración de base de datos
# En desarrollo por defecto usa SQLite, en producción se recomienda MySQL

# Para MySQL (producción)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=websap
DB_USER=root
DB_PASS=your_database_password  

# Configuración para forzar uso de MySQL en desarrollo
USE_MYSQL=false

# Configuración de sincronización
SYNC_ENABLED=true
SYNC_INTERVAL=60000  # Intervalo de sincronización en milisegundos

# Configuración de correo (solo necesaria en producción)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USER=tu_correo@gmail.com
# MAIL_PASSWORD=tu_contraseña_de_app
# MAIL_FROM=tu_correo@gmail.com

# URL base de la API para el frontend
REACT_APP_API_URL=/api
